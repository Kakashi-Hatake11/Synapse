<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Optional: Channel Icon or Avatar -->
    <!-- <ImageView
        android:id="@+id/imageView_channel_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_group_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/channel_icon" /> -->

    <TextView
        android:id="@+id/textView_channel_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_timestamp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="General Chat Room Name That is Very Long" />
    <!-- android:layout_marginStart="8dp" If using icon -->
    <!-- app:layout_constraintStart_toEndOf="@+id/imageView_channel_icon" If using icon -->


    <TextView
        android:id="@+id/textView_channel_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="?android:attr/textColorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/textView_channel_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_channel_name"
        app:layout_constraintEnd_toEndOf="@+id/textView_channel_name"
        tools:text="Short description of the channel" />

    <TextView
        android:id="@+id/textView_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="?android:attr/textColorTertiary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/textView_channel_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_channel_description"
        app:layout_constraintEnd_toEndOf="@+id/textView_channel_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Last message preview goes here..." />

    <TextView
        android:id="@+id/textView_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_channel_name"
        tools:text="10:30 AM" />

</androidx.constraintlayout.widget.ConstraintLayout>
