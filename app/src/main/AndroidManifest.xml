<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/synapse1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/synapse1"
        android:supportsRtl="true"
        android:theme="@style/Theme.Synapse"
        tools:targetApi="31">

        <!-- Make VerificationActivity the starting point of the app -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Synapse.NoActionBar"> <!-- Or your desired theme -->
            <!-- Remove LAUNCHER intent-filter if VerificationActivity is the entry point -->
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".ui.verification.VerificationActivity"
            android:exported="true"
            android:theme="@style/Theme.Synapse.NoActionBar"> <!-- Or your desired theme -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.Synapse.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

    </application>

</manifest>